#include <iostream>
using namespace std;

class Robot {
public:
    // Default constructor
    Robot() {
        robotName = "Robo";  // Default name for the robot
        robotColor = "Blue"; // Default color for the robot
        cout << "A robot has been created!" << endl;
    }

    void showInfo() {
        cout << "Name: " << robotName << ", Color: " << robotColor << endl;
    }

private:
    string robotName;
    string robotColor;
};

int main() {
    // Creating a robot using the default constructor
    Robot myRobot;  // No need to give it a name or color
    myRobot.showInfo();  // It will use the default values
    return 0;
}
